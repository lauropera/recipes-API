{
  "name": "recipes-api",
  "version": "1.0.0",
  "description": "API de Receitas",
  "main": "./build/server.js",
  "scripts": {
    "build": "npx -y tsc",
    "start": "node .",
    "test": "mocha -r ts-node/register ./src/__tests__/**/*$NAME*.test.ts -t 10000 --exit",
    "test:coverage": "nyc npm run test",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "db:reset": "npx sequelize-cli db:drop && npx sequelize-cli db:create && npx sequelize-cli db:migrate && npx sequelize-cli db:seed:all",
    "prestart": "npm run build && npm run db:reset",
    "compose:up": "docker-compose up -d --build",
    "compose:down": "docker-compose down --remove-orphans"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lauropera/recipes-API.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/lauropera/recipes-API/issues"
  },
  "homepage": "https://github.com/lauropera/recipes-API#readme",
  "devDependencies": {
    "@types/chai": "^4.3.4",
    "@types/chai-http": "^4.2.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.14",
    "@types/jest": "^29.2.4",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/mocha": "^10.0.0",
    "@types/node": "^18.11.11",
    "@types/sequelize": "^4.28.14",
    "@types/sinon": "^10.0.13",
    "@types/sinon-chai": "^3.2.9",
    "chai": "^4.3.7",
    "chai-http": "^4.3.0",
    "eslint": "^8.28.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-mocha": "^10.1.0",
    "eslint-plugin-sonarjs": "^0.16.0",
    "jest": "^29.3.1",
    "mocha": "^10.1.0",
    "nyc": "^15.1.0",
    "sequelize-cli": "^6.5.2",
    "sinon": "^14.0.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "http-status-codes": "^2.2.0",
    "jsonwebtoken": "^8.5.1",
    "mysql2": "^2.3.3",
    "sequelize": "^6.26.0",
    "zod": "^3.19.1"
  }
}
