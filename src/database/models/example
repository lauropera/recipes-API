import { INTEGER } from 'sequelize';
import { Model } from 'sequelize';
import db from '.';

interface IMODELTYPE {}

type IMODELTYPECreation = Omit<IMODELTYPE, 'id'>;

class MODELTYPE extends Model<IMODELTYPE, IMODELTYPECreation> {}

MODELTYPE.init(
  {
    id: {
      type: INTEGER,
      allowNull: false,
      primaryKey: true,
      autoIncrement: true,
    },
  },
  {
    sequelize: db,
  }
);

export default MODELTYPE;
export { IMODELTYPE, IMODELTYPECreation };
